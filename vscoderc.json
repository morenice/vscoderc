{
    "files.autoSave": "afterDelay",
    "files.useExperimentalFileWatcher": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    "editor.trimAutoWhitespace": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": false,
    "editor.fontSize": 14,

    "window.zoomLevel": 0,

    "debug.allowBreakpointsEverywhere": true,
    "debug.inlineValues": true,

    "terminal.integrated.scrollback": 10000000000,

    "vs-kubernetes": {
        "vs-kubernetes.helm-path": "/Users/morenice/.vs-kubernetes/tools/helm/darwin-amd64/helm",
        "vs-kubernetes.kubectl-path": "/Users/morenice/.vs-kubernetes/tools/kubectl/kubectl",
        "vs-kubernetes.minikube-path": "/Users/morenice/.vs-kubernetes/tools/minikube/darwin-amd64/minikube",
        "vs-kubernetes.draft-path": "/Users/morenice/.vs-kubernetes/tools/draft/darwin-amd64/draft"
    },

    "python.pythonPath": "python3",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "[python]": {
      "editor.tabSize": 4
    },
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,

    "[html]": {
      "editor.tabSize": 2
    },
    "[css]": {
      "editor.tabSize": 2
    },

    "[javascript]": {
      "editor.tabSize": 2
    },
    "[json]": {
      "editor.tabSize": 2
    },

    "[vue]": {
      "editor.tabSize": 2
    },
    "eslint.autoFixOnSave": true,
    "eslint.validate": [
      {
        "language": "vue",
        "autoFix": true
      },
      {
        "language": "html",
        "autoFix": true
      },
      {
        "language": "javascript",
        "autoFix": true
      }
    ],
    "eslint.options": {
      "configFile": ".eslintrc.js"
    },

    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "python.languageServer": "Microsoft"
}
